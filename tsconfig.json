{
  "compilerOptions": {
    "target": "es5", 
    "module": "commonjs", 
    "lib": ["ES6", "DOM"],
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                   
    "skipLibCheck": true,    
    "outDir": "./dist", 
    "noImplicitAny": true                  
  },
  "include": ["src"],
  "exclude": ["node_modules", "spec", "./dist"]
}
